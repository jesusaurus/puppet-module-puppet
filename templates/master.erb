[master]
  environment   = <%= default_environment %>
  <% if dynamic_environments -%>
  manifest      = $confdir/environments/$environment/manifests/site.pp
  modulepath    = $confdir/environments/$environment/modules
  <% end -%>

  <% if storeconfigs -%>
  storeconfigs      = true
  thin_storeconfigs = <%= thinconfigs %>
    
  dbadapter     = <%= dbadapter %>
    <% if dbadapter == 'mysql' -%>
  dbuser        = <%= dbuser %>
  dbpassword    = <%= dbpassword %>
  dbserver      = <%= dbserver %>
  dbsocket      = <%= dbsocket %>
    <% elsif dbadapter == 'postgresql' -%>
  dbuser        = <%= dbuser %>
  dbpassword    = <%= dbpassword %>
  dbserver      = <%= dbserver %>
  dbname        = <%= dbname %>
    <% end %>
  <% end %>
